{# templates/registration/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/register.css') }}">
{% endblock %}

{% block body %}
<nav>
    <div class="logo">
        <img src="{{ asset('images/logob.png') }}" alt="Logo">
    </div>
    <ul>
        <li><a href="{{ path('home') }}">Home</a></li>
        <li><a href="#">Services</a></li>
        <li><a href="#">Témoignages</a></li>
        <li><a href="#">Contact</a></li>
    </ul>
    <div class="auth-buttons">
        {% if is_granted('ROLE_USER') %}
            <a href="#" id="menu-burger">☰</a>
            <div id="sidebar" class="sidebar">
                <a href="#" class="close-btn">&times;</a>
                <a href="#">Mon Compte</a>
                <a href="#">Programme 1</a>
                <a href="#">Programme 2</a>
                <a href="#">Programme 3</a>
                <a href="#">Programme 4</a>
                <a href="#">Programme 5</a>
                <a href="#">Programme 6</a>
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% else %}
            <a href="{{ path('app_login') }}" class="btn-outline">Se connecter</a>
            <a href="{{ path('app_register') }}" class="btn-filled">S'inscrire</a>
        {% endif %}
    </div>
</nav>

<div class="registration-container">
    <h1>Inscription</h1>

    {{ form_start(registrationForm) }}
        <div class="form-group">
            {{ form_label(registrationForm.nom, 'Nom') }}
            {{ form_widget(registrationForm.nom, { 'attr': {'required': true, 'pattern': '[a-zA-Z\\s]+', 'title': 'Le nom ne doit contenir que des lettres et des espaces.'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.email, 'Email') }}
            {{ form_widget(registrationForm.email, { 'attr': {'required': true, 'type': 'email'} }) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            {{ form_widget(registrationForm.plainPassword, { 'attr': {'required': true, 'pattern': '(?=.*\\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[\\W_]).{8,}', 'title': 'Le mot de passe doit contenir au moins 8 caractères, dont une majuscule, une minuscule, un chiffre et un symbole.'} }) }}
        </div>
        <div class="form-group">
            {{ form_widget(registrationForm.agreeTerms) }}
            {{ form_label(registrationForm.agreeTerms, 'J\'accepte les termes et conditions') }}
        </div>
        <div class="form-group">
            <button type="submit" class="btn-submit">S'inscrire</button>
        </div>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}